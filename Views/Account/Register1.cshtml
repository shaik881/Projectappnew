@model RegisterViewModel
@{
    ViewData["Title"] = "Registration page";
    Layout = "_ProLayout";
}
    <main class="bg-yellow-500 flex justify-center items-center min-h-screen">
        <!-- Left image section -->
        <div class="flex items-center p-8 rounded-lg max-w-6xl gap-20">
            <div class="w-1/2 pr-8">
                <img src="https://storage.googleapis.com/a1aa/image/iL521wGs23aYN5bfRgf9oI8yFWlqJ3FCe5P1DyeJgr6LUZDPB.jpg" alt="Elderly man reading a book in a library" class="w-full rounded-lg" />
            </div>

            <!-- Right form section with ASP.NET Razor Form -->
        <div class="bg-yellow-300 min-h-screen flex justify-center items-center p-4 w-[50%] rounded-lg">
                <!-- Small Container for the Form -->
                <div class="w-[85%] bg-inherit rounded-lg">
                    <h2 class="text-xl font-bold mb-4 border-b-2 border-black pb-2">New Account/Sign Up</h2>

                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <!-- Role Selection Dropdown -->
                        <div class="mb-3">
                            <label asp-for="Role" class="block mb-2 text-gray-700">Role</label>
                            <select asp-for="Role" class="w-full p-2 mb-2 rounded-md" required>
                                <option value="User">User</option>
                                <option value="Admin">Admin</option>
                            </select>
                            <span asp-validation-for="Role" class="text-red-500"></span>
                        </div>

                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="FirstName" class="block mb-2 text-gray-700">First Name</label>
                            <input asp-for="FirstName" class="w-full p-2 mb-2 rounded-md" required />
                            <span asp-validation-for="FirstName" class="text-red-500"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="LastName" class="block mb-2 text-gray-700">Last Name</label>
                            <input asp-for="LastName" class="w-full p-2 mb-2 rounded-md" required />
                            <span asp-validation-for="LastName" class="text-red-500"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="block mb-2 text-gray-700">Email</label>
                            <input asp-for="Email" type="email" class="w-full p-2 mb-2 rounded-md" required />
                            <span asp-validation-for="Email" class="text-red-500"></span>
                        </div>

                        <!-- Mobile Number -->
                        <div class="mb-3">
                            <label asp-for="MobileNumber" class="block mb-2 text-gray-700">Mobile Number</label>
                            <input asp-for="MobileNumber" type="tel" class="w-full p-2 mb-2 rounded-md" required />
                            <span asp-validation-for="MobileNumber" class="text-red-500"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Password" class="block mb-2 text-gray-700">Password</label>
                            <input asp-for="Password" type="password" class="w-full p-2 mb-2 rounded-md" required />
                            <span asp-validation-for="Password" class="text-red-500"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="block mb-2 text-gray-700">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="w-full p-2 mb-4 rounded-md" required />
                            <span asp-validation-for="ConfirmPassword" class="text-red-500"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="w-full bg-yellow-700 text-white p-2 rounded-md mb-2">Register</button>
                        <p class="text-center mb-2">
                            Already have an account? <a href="#" class="text-blue-500">Login</a>
                        </p>
                        <button type="button" class="w-full bg-gray-800 text-white p-2 rounded-md">Continue with Google</button>
                    </form>
                </div>
            </div>

        </div>
    </main>


    @section Scripts {
        @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
