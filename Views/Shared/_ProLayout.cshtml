<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DefaultIdentityColumnRename.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-yellow-700 p-4 flex justify-between items-center">
        <div class="flex items-center">
            <img src="https://storage.googleapis.com/a1aa/image/vY3mz2IAsa7XGBaZMIhLVfPVgfxbsyzK5Xtj1UeDa6ACqshnA.jpg" alt="Logo" class="h-10 w-10" />
            <h1 class="text-white text-2xl ml-2">My Books</h1>
        </div>
        <div class="flex items-center">
            <input type="text" placeholder="🔍  Enter exact text" class="p-2 rounded-md" />
            <nav class="ml-8">
                <a href="#" class="text-white mx-2">Category</a>
                <a href="#" class="text-white mx-2">Feat</a>
                <a href="#" class="text-white mx-2">About us</a>               
            </nav>
            <div> <partial name="_ProLoginPartial" /></div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted bg-gray-800 text-white p-8">
        <div class="flex justify-around">
            <div>
                <h3 class="font-bold mb-2">About Us</h3>
                <ul>
                    <li><a href="#" class="text-gray-400">Contact Us</a></li>
                    <li><a href="#" class="text-gray-400">Brand Story</a></li>
                    <li><a href="#" class="text-gray-400">Blogs</a></li>
                </ul>
            </div>
            <div>
                <h3 class="font-bold mb-2">Policies</h3>
                <ul>
                    <li><a href="#" class="text-gray-400">Privacy Policy</a></li>
                    <li><a href="#" class="text-gray-400">Track your order</a></li>
                    <li><a href="#" class="text-gray-400">Shipping & Returns</a></li>
                </ul>
            </div>
            <div class="flex items-center">
                <a href="#" class="text-gray-400 mx-2"><i class="fab fa-instagram"></i></a>
                <a href="#" class="text-gray-400 mx-2"><i class="fab fa-facebook"></i></a>
                <a href="#" class="text-gray-400 mx-2"><i class="fab fa-twitter"></i></a>
                <a href="#" class="text-gray-400 mx-2"><i class="fab fa-youtube"></i></a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
